<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" 
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" 
             version="1.0">
   <persistence-unit name="stmwebapp">
      <provider>org.hibernate.ejb.HibernatePersistence</provider>

       <class>com.projects.savethemeeting.objectmodel.User</class>
       <class>com.projects.savethemeeting.objectmodel.UserOnMeeting</class>
       <class>com.projects.savethemeeting.objectmodel.Meeting</class>
       <class>com.projects.savethemeeting.objectmodel.Record</class>

       <!--<class>com.projects.savethemeeting.objectmodel.UserOnMeeting</class>-->
      <properties>
      	 <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
      	 <property name="hibernate.hbm2ddl.auto" value="create" />
         <property name="hibernate.show_sql" value="true"/>

      </properties>
   </persistence-unit>
</persistence>
